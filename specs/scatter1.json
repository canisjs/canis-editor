{
    "charts": [
        {
            "source": "./charts/transitionTest/scatter1.dsvg"
        },
        {
            "source": "./charts/transitionTest/scatter2.dsvg"
        }
    ],
    "animations": [
        {
            "id": "rect",
            "selector": ".rectangle",
            "elements": {
                "enter": {
                    "grouping": {
                        "groupBy": "id",
                        "reference": "start after previous"
                    },
                    "effects": [
                        {
                            "type": "fade",
                            "duration": 800
                        }
                    ]
                },
                "update": {
                    "align": {
                        "target": "rect.enter.effects[0]",
                        "type": "object"
                    },
                    "reference": "start after previous",
                    "effects": [
                        {
                            "type": "scale Y",
                            "duration": 1000
                        },
                        {
                            "reference": "start with previous",
                            "type": "data change",
                            "duration": 1000
                        }
                    ]
                }
            }
        }
    ]
}